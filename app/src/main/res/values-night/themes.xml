<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlNormal">@color/blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/dark_gray</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialog" parent='Theme.MaterialComponents.DayNight.Dialog.Alert'>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="backgroundTint">@color/blue</item>
    </style>
    <style name="ButtonLogin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>